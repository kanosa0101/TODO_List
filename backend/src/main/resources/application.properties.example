# TODO List 后端配置文件示例
# ============================================
# 复制此文件为 application.properties 并修改相应配置
# ============================================

# 服务器配置
server.port=3001
spring.application.name=todo-backend

# MySQL 数据库配置
spring.datasource.url=jdbc:mysql://localhost:3306/tododb?useSSL=false&serverTimezone=Asia/Shanghai&characterEncoding=utf8&useUnicode=true&allowPublicKeyRetrieval=true
spring.datasource.driverClassName=com.mysql.cj.jdbc.Driver
spring.datasource.username=root
spring.datasource.password=YOUR_MYSQL_PASSWORD

# JPA 配置
spring.jpa.database-platform=org.hibernate.dialect.MySQL8Dialect
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL8Dialect

# JSON日期格式配置
spring.jackson.serialization.write-dates-as-timestamps=false
spring.jackson.time-zone=Asia/Shanghai

# 静态资源配置
spring.web.resources.add-mappings=false

# CORS配置
spring.web.cors.allowed-origins=*
spring.web.cors.allowed-methods=GET,POST,PUT,PATCH,DELETE,OPTIONS
spring.web.cors.allowed-headers=*

# JWT配置
jwt.secret=YOUR_JWT_SECRET_KEY_HERE_AT_LEAST_64_CHARACTERS_LONG_FOR_SECURITY
jwt.expiration=86400000

# Swagger/Knife4j配置
springdoc.api-docs.path=/v3/api-docs
springdoc.swagger-ui.path=/swagger-ui.html
springdoc.swagger-ui.enabled=true
knife4j.enable=true
knife4j.setting.enable-document-manage=true
knife4j.setting.enable-version=true
knife4j.setting.enable-swagger-models=true
knife4j.setting.swagger-model-name=实体类列表
knife4j.setting.enable-after-script=true
knife4j.setting.enable-filter-multipart-api-method-type=true
knife4j.setting.enable-filter-multipart-apis=true
knife4j.setting.enable-request-cache=true
knife4j.setting.enable-host-text=localhost:3001
knife4j.setting.enable-home-custom-path=/
knife4j.setting.enable-search=true
knife4j.setting.enable-footer=false
knife4j.setting.enable-footer-custom=true
knife4j.setting.footer-custom-content=Copyright © 2024 TODO List API
knife4j.setting.enable-dynamic-parameter=true
knife4j.setting.enable-debug=true
knife4j.setting.enable-open-api=true
knife4j.setting.enable-group=true

